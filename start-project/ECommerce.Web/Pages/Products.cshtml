@page
@model ECommerce.Web.Pages.ProductsModel
@{
    ViewData["Title"] = "Products";
}

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>
    
    @if (Model.Products.Any())
    {
        <div class="row">
            @foreach (var product in Model.Products)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Description</p>
                            <p class="card-text">
                                <strong>Price:</strong> $@product.Price<br/>
                                <strong>Category:</strong> @product.Category<br/>
                                <strong>In Stock:</strong> @product.StockQuantity
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <p>No products available or unable to connect to the API.</p>
            <p class="small">Make sure the API is running at: <code>@Model.ApiUrl</code></p>
        </div>
    }
</div>
